<?php

function wmod_schema() {
  $schema['wmod'] = array(
    'fields' => array(
      'wmid' => array(
        'type' => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ),
      'title' => array(
        'type' => 'varchar',
        'length' => 128,
        'not null' => TRUE,
        'default' => '',
      ),
      'base_url' => array(
        'type' => 'varchar',
        'length' => 256,
        'not null' => TRUE,
        'default' => '',
      ),
      'ignore' => array(
        'type' => 'text',
        'size' => 'big',
        'not null' => TRUE,
      ),
      'content_type_info' => array(
        'type' => 'text',
        'size' => 'big',
        'not null' => TRUE,
      )
    ),
    'primary key' => array('wmid'),
  );
  
  $schema['wmod_urls'] = array(
    'fields' => array(
      'wmid' => array(
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      ),
      'path' => array(
        'type' => 'varchar',
        'length' => 256,
        'not null' => TRUE,
        'default' => '',
      ),
      'type' => array(
        'type' => 'varchar',
        'length' => 128,
        'not null' => TRUE,
        'default' => '',
      ),
      'scanned' => array(
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      ),
      'error' => array(
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      )
    ),
    'primary key' => array('path'),
    'unique keys' => array('path' => array('path')),
  );
  
  return $schema;
}

function wmod_install() {
  drupal_install_schema('wmod');
}

function wmod_uninstall() {
  drupal_uninstall_schema('wmod');
}
